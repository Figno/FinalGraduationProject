<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.chxip.localmusic.MainActivity">


<EditText
    android:id="@+id/ed_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></EditText>
    <com.chxip.localmusic.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.chxip.localmusic.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/DDDDDD" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_main_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/blue"
        app:tabTextColor="@color/text_gray_6">


        <android.support.design.widget.TabItem
            android:id="@+id/ti_main_statement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@mipmap/order_record_selected"
            android:text="音乐" />

        <android.support.design.widget.TabItem
            android:id="@+id/ti_main_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@mipmap/remind"
            android:text="我的" />

    </android.support.design.widget.TabLayout>

</LinearLayout>
